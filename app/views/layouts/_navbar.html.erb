<!--************************************
    Header Start
*************************************-->
<header id="tg-header" class="tg-header">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <strong class="tg-logo">
          <%= link_to root_path do %>
          <%= image_tag "logo.png", alt: "Conference logo" %>
          <% end %>
        </strong>
        <div class="tg-navigationarea">
          <!-- <a id="tg-btnopenclose" class="tg-btnopenclose" href="javascript:void(0);"><i class="icon-menu"></i></a> -->
          <nav id="tg-nav" class="tg-nav">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#tg-navigation" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>
            <div id="tg-navigation" class="collapse navbar-collapse tg-navigation">
              <ul>
                <% if request.fullpath == root_path %>
                  <%= render "layouts/navbar_root" %>
                <% else %>
                  <%= render "layouts/navbar_page" %>
                <% end %>
              </ul>
            </div>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>
<!--************************************
    Header End
*************************************-->
